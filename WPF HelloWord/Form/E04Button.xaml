<Window x:Class="WPF_HelloWord.Form.E04Button"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_HelloWord.Form"
        mc:Ignorable="d"
        Title="E04Button" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
        <Button Width="80" Click="Button_Click" Background="Beige" Foreground="Blue" FontWeight="Bold">Xin chào</Button>
        <Button  Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Formatted</TextBlock>
                <TextBlock Foreground="Blue" FontWeight="Bold" Margin="2"> Button </TextBlock>
                <TextBlock Foreground="Gray" FontStyle="Italic">[Various]</TextBlock>
            </StackPanel>
        </Button>
        <Button Padding="5">
            <StackPanel Orientation="Horizontal">
                <Image Source="/WpfTutorialSamples;component/Images/help.png" />
                <TextBlock Margin="5,0">Help</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
    
</Window>
